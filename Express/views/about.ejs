<!DOCTYPE html>
<html>
  <head>
    <title>Making a Difference</title>
  </head>

  <style>
    :root {
      --impact-max-width: 1160px;
      --impact-padding-x: 32px;
      --impact-padding-y: 96px;
      --impact-border: #dcdfe3;
      --impact-text: #1e1f23;
      --impact-muted: #5c6470;
      --impact-accent: #28c056;
      --impact-bg: #ffffff;
    }

    body {
      margin: 0;
      font-family: "Avenir", "Helvetica Neue", Arial, sans-serif;
      color: var(--impact-text);
      background: #f8fafc;
    }

    .impact {
      padding: var(--impact-padding-y) var(--impact-padding-x);
      background: var(--impact-bg);
    }

    .impact__inner {
      max-width: var(--impact-max-width);
      margin: 0 auto;
    }

    .impact__title {
      margin: 0 0 48px;
      font-size: clamp(2.25rem, 4.3vw, 2.75rem);
      font-weight: 700;
      text-align: center;
      letter-spacing: -0.015em;
    }

    .impact__grid {
      display: grid;
      grid-template-columns: repeat(4, minmax(0, 1fr));
    }

    .impact-card {
      position: relative;
      padding: 48px 36px;
      border: 1px solid transparent;
      border-top-color: var(--border-top-default, var(--impact-border));
      border-right-color: var(--border-right-default, var(--impact-border));
      border-bottom-color: var(--border-bottom-default, var(--impact-border));
      border-left-color: var(--border-left-default, var(--impact-border));
      background: var(--impact-bg);
      transition: border-color 200ms ease, box-shadow 200ms ease;
      --border-top-hover: var(--border-top-default, var(--impact-border));
      --border-right-hover: var(--border-right-default, var(--impact-border));
      --border-bottom-hover: var(--border-bottom-default, var(--impact-border));
      --border-left-hover: var(--border-left-default, var(--impact-border));
    }

    .impact-card:nth-child(4n + 1) {
      --border-left-default: transparent;
    }
    .impact-card:nth-child(4n) {
      --border-right-default: transparent;
    }
    .impact-card:nth-child(-n + 4) {
      --border-top-default: transparent;
    }
    .impact-card:nth-child(n + 5) {
      --border-bottom-default: transparent;
    }

    .impact-card h3 {
      margin: 0 0 16px;
      font-size: 1.25rem;
      font-weight: 600;
      line-height: 1.35;
    }

    .impact-card p {
      margin: 0;
      color: var(--impact-muted);
      font-size: 1rem;
      line-height: 1.6;
    }

    .impact-card:hover,
    .impact-card:focus-within {
      box-shadow: 0 18px 38px rgba(40, 192, 86, 0.12);
      border-width: 2px;
      border-top-color: var(--border-top-hover);
      border-right-color: var(--border-right-hover);
      border-bottom-color: var(--border-bottom-hover);
      border-left-color: var(--border-left-hover);
      transition: border-color 200ms ease, border-width 200ms ease,
        box-shadow 200ms ease;
    }

    /* Hover border assignments */
    .impact-card:nth-child(1) {
      --border-right-hover: var(--impact-accent);
      --border-bottom-hover: var(--impact-accent);
      --border-top-hover: transparent;
      --border-left-hover: transparent;
    }
    .impact-card:nth-child(2),
    .impact-card:nth-child(3) {
      --border-left-hover: var(--impact-accent);
      --border-right-hover: var(--impact-accent);
      --border-bottom-hover: var(--impact-accent);
      --border-top-hover: transparent;
    }
    .impact-card:nth-child(4) {
      --border-left-hover: var(--impact-accent);
      --border-bottom-hover: var(--impact-accent);
      --border-right-hover: transparent;
      --border-top-hover: transparent;
    }
    .impact-card:nth-child(5) {
      --border-right-hover: var(--impact-accent);
      --border-top-hover: var(--impact-accent);
      --border-left-hover: transparent;
      --border-bottom-hover: transparent;
    }
    .impact-card:nth-child(6),
    .impact-card:nth-child(7) {
      --border-left-hover: var(--impact-accent);
      --border-right-hover: var(--impact-accent);
      --border-top-hover: var(--impact-accent);
      --border-bottom-hover: transparent;
    }
    .impact-card:nth-child(8) {
      --border-left-hover: var(--impact-accent);
      --border-top-hover: var(--impact-accent);
      --border-right-hover: transparent;
      --border-bottom-hover: transparent;
    }

    @media (max-width: 1100px) {
      .impact-card {
        padding: 40px 28px;
      }
    }

    @media (max-width: 900px) {
      .impact__grid {
        grid-template-columns: repeat(2, minmax(0, 1fr));
      }

      .impact-card:nth-child(2n + 1) {
        --border-left-default: transparent;
      }
      .impact-card:nth-child(2n) {
        --border-right-default: transparent;
      }
      .impact-card:nth-child(-n + 2) {
        --border-top-default: transparent;
      }
      .impact-card:nth-child(n + 3) {
        --border-bottom-default: transparent;
      }
    }

    @media (max-width: 540px) {
      .impact {
        padding: 72px 20px;
      }

      .impact__grid {
        grid-template-columns: 1fr;
      }

      .impact-card {
        --border-left-default: transparent;
        --border-right-default: transparent;
      }
      .impact-card:not(:first-child) {
        --border-top-default: var(--impact-border);
      }
      .impact-card:last-child {
        --border-bottom-default: transparent;
      }
    }
  </style>
  <body>
    <section class="impact">

